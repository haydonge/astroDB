<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Excel File Upload</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    #uploadForm {
      display: none;
    }

    #overlay {
      display: none;
    }
  </style>
</head>

<body class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="text-center">
    
    <button id="uploadButton" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
      <img src="upload_icon.png" alt="Upload" width="24" height="24" class="inline mr-2">Upload Excel
    </button>
  </div>

  <div id="overlay" class="fixed inset-0 bg-black bg-opacity-50"></div>

  <form id="uploadForm" action="/upload" method="post" enctype="multipart/form-data"
    class="fixed bg-white p-6 rounded-lg shadow-lg w-full max-w-md mx-auto top-1/2 transform -translate-y-1/2 left-1/2 -translate-x-1/2">
    <div class="mb-4">
      <label for="excelFile" class="block text-sm font-medium text-gray-700 mb-2">Choose Excel file</label>
      <input type="file" name="excelFile" accept=".xlsx, .xls" required
        class="block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
    </div>
    <div class="flex justify-end space-x-4">
      <button type="button" id="closeFormButton"
        class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500">Close</button>
      <button type="submit"
        class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Upload</button>
    </div>
  </form>

  <script>
    const uploadButton = document.getElementById('uploadButton')!;
    const uploadForm = document.getElementById('uploadForm')!;
    const overlay = document.getElementById('overlay')!;
    const closeFormButton = document.getElementById('closeFormButton')!;

    uploadButton.addEventListener('click', () => {
      uploadForm.style.display = 'block';
      overlay.style.display = 'block';
    });

    closeFormButton.addEventListener('click', () => {
      uploadForm.style.display = 'none';
      overlay.style.display = 'none';
    });

    overlay.addEventListener('click', () => {
      uploadForm.style.display = 'none';
      overlay.style.display = 'none';
    });

    uploadForm.addEventListener('submit', async (event) => {
      event.preventDefault();
      const formData = new FormData(uploadForm);
      const response = await fetch('/upload', {
        method: 'POST',
        body: formData
      });
      if (response.ok) {
        alert('Data imported successfully');
        uploadForm.style.display = 'none';
        overlay.style.display = 'none';
      } else {
        alert('Error importing data');
      }
    });
  </script>
</body>

</html>
