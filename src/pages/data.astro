    {data1.map((i) => <li> {i} </li>)}

   </div>
   <div class="grid gap-6 grid-cols-[repeat(auto-fit,_minmax(280px,_1fr))] items-start">
    {data1.map((i) => <li> {i} </li>)}

   </div>

  <div
    class="grid gap-6 grid-cols-[repeat(auto-fit,_minmax(280px,_1fr))] items-start"
