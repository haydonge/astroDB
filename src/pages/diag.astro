<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic Dialog Example</title>
    <style>
        dialog {
            border: none;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.25);
            padding: 20px;
        }
    </style>
</head>
<body>
    <button id="addButton">Add Button</button>
    <div id="buttonContainer"></div>

    <script>
        let buttonCounter = 0;

        document.getElementById('addButton').addEventListener('click', () => {
            buttonCounter++;

            // Create new button
            const newButton = document.createElement('button');
            newButton.innerText = `Open Dialog ${buttonCounter}`;
            newButton.id = `openDialog${buttonCounter}`;

            // Create new dialog
            const newDialog = document.createElement('dialog');
            newDialog.id = `dialog${buttonCounter}`;

            // Create content for the dialog
            const dialogContent = document.createElement('p');
            dialogContent.innerText = `This is Dialog ${buttonCounter}.`;

            // Create close button for the dialog
            const closeButton = document.createElement('button');
            closeButton.innerText = 'Close';
            closeButton.id = `closeDialog${buttonCounter}`;

            // Append content and close button to the dialog
            newDialog.appendChild(dialogContent);
            newDialog.appendChild(closeButton);

            // Append new button and dialog to the container
            document.getElementById('buttonContainer').appendChild(newButton);
            document.getElementById('buttonContainer').appendChild(newDialog);

            // Add event listener to open the dialog
            newButton.addEventListener('click', () => {
                newDialog.showModal();
            });

            // Add event listener to close the dialog
            closeButton.addEventListener('click', () => {
                newDialog.close();
            });
        });
    </script>
</body>
</html>
